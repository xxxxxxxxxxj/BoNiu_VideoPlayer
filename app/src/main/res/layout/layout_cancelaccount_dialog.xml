<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round11"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cancelaccountdialog_close"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="right"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="13dip"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_vipdialog_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dip"
            android:text="温馨提示"
            android:textColor="@color/a333333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="15dip"
            android:text="亲爱的用户："
            android:textColor="@color/a333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="15dip"
            android:text="          账号一旦注销成功，我们将清除当前APP的所有数据，您将再也无法使用此账号注册/登录当前APP。"
            android:textColor="@color/a333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="40dip"
            android:text="          同时也无法享受以及使用当前APP提供的任何服务。"
            android:textColor="@color/a333333"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginBottom="38dip"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip">

            <TextView
                android:id="@+id/tv_cancelaccountdialog_zx"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/bg_c5c5c5_round5"
                android:gravity="center"
                android:text="继续注销"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cancelaccountdialog_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_ffe52c_round5"
                android:gravity="center"
                android:text="我再想想"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>