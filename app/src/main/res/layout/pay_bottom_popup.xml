<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_paypop_close"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="13dip"
            android:layout_marginRight="17dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_bottompop_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择支付方式"
            android:textColor="@color/a272727"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_paypop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="支付金额：16.88"
        android:textColor="@color/a272727"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_paypop_payway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_paypop_sub"
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="14dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/bg_ffe52c_round5"
        android:gravity="center"
        android:text="立即支付 "
        android:textColor="@color/a2D2D2D"
        android:textSize="15sp" />
</LinearLayout>