<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round11"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dip"
            android:layout_marginBottom="16dip"
            android:text="提示"
            android:textColor="@color/a333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="30dip"
            android:textColor="@color/a333333"
            android:text="确认退出当前APP?"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_exitappdialog_yes"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/bg_ffe52c_round5"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/a2D2D2D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_exitappdialog_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dip"
            android:text="确认退出"
            android:textColor="#ff878787"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>