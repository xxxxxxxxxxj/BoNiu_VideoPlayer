<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round11"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_upgradedialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="13dip"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_appoint_close" />

        <TextView
            android:id="@+id/tv_upgradedialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dip"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_upgradedialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="24dip"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_upgradedialog_sub"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:layout_marginBottom="24dip"
            android:background="@drawable/bg_ffe52c_round5"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="@color/a2D2D2D"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>