<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round11"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dip"
            android:layout_marginBottom="16dip"
            android:text="用户协议和隐私政策提示"
            android:textColor="@color/a333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:text="亲爱的用户："
            android:textColor="@color/a333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_privacydialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="50dip"
            android:text="     您好，在您使用本应用前，请您认真阅读并了解《用户协议》和《隐私政策》。点击“同意”即表示已阅读并同意全部条款。"
            android:textColor="@color/a333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_privacydialog_yes"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/bg_ffe52c_round5"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/a2D2D2D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_privacydialog_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dip"
            android:text="不同意并退出APP>>"
            android:textColor="#ff878787"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>